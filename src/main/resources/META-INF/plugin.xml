<idea-plugin>
    <id>com.example.copyfilecontents</id>
    <name>Copy File Contents</name>
    <version>1.0</version>
    <vendor>Sandun</vendor>

    <description>
        Adds context menu actions to copy contents of selected files to the clipboard,
        and utilities for opening changed files.
    </description>

    <actions>
        <action id="CopyFileContentsAction"
                class="CopyFileContentsAction"
                text="Copy Contents of Selected Files to Clipboard"
                description="Copies the full content of selected files to clipboard.">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="CopyAllOpenedFileContentsAction"
                class="CopyAllOpenedFileContentsAction"
                text="Copy All Opened File Contents"
                description="Copy the contents of all currently opened editor tabs to the clipboard">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="CopyOpenedFileNamesAction"
                class="CopyOpenedFileNamesAction"
                text="Copy Opened File Names"
                description="Copy relative names of all opened editor files">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="CopySelectedFileNamesAction"
                class="CopySelectedFileNamesAction"
                text="Copy Selected File Names"
                description="Copy relative names of selected files">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <!-- âœ… Git Log commit menu only -->
        <action id="com.example.plugin.OpenAllChangedFiles"
                class="com.example.plugin.actions.OpenAllChangedFilesAction"
                text="Open All Changed Files Since This Commit"
                description="Opens all files touched from the selected commit onward (plus local changes).">
            <add-to-group group-id="Git.Log.ContextMenu" anchor="last"/>
            <add-to-group group-id="Vcs.Log.ContextMenu" anchor="last"/>
        </action>

    </actions>
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="OpenAllChangedFiles"
                           displayType="BALLOON"
                           isLogByDefault="false"
                           title="Open All Changed Files"/>
    </extensions>
</idea-plugin>
